<!-- Wrapper-->
	<div id="wrapper">

		<!-- Nav -->
			<nav id="nav">
				<a href="#me" class="icon fa-home active"><span>Home</span></a>
				<a href="#resume" class="icon fa-file-text"><span>Resume</span></a>
				<a href="#projects" class="icon fa-briefcase"><span>Projects</span></a>
				<a href="#contact" class="icon fa-envelope"><span>Contact</span></a>


			</nav>

		<!-- Main -->
			<div id="main">

				<!-- Me -->
					<article id="me" class="panel">
						<header>
							<h1>Ryan Duchin</h1>
							<p>Engineer and Software Developer</p>
							<p id="external_nav">
								<a href="https://www.linkedin.com/in/ryanduchin" class="icon fa-linkedin-square"
									target="_blank"></a>
								<a href="https://github.com/ryanduchin" class="icon fa-github"
									target="_blank"></a>
							</p>
						</header>
						<a href="#projects" class="jumplink pic">
							<span class="arrow icon fa-chevron-right">
								<span>See my projects</span>
							</span>
							<%= image_tag 'me.jpg' %>
						</a>
					</article>

				<!-- Resume -->
					<article id="resume" class="panel">
						<header>
							<h2>Resume</h2>
						</header>
						<iframe width="800" height="1030"></iframe>
					</article>

				<!-- projects -->
					<article id="projects" class="panel">
						<header>
							<h2>Projects</h2>
						</header>
						<section>
							<div class="row">
								<div class="4u 12u$(mobile)">
									<a href="http://www.music-video-collector.com/" class="image fit">
										<%= image_tag 'mvc_xsm.png' %>
									<header><h3>Music Video Collector</h3>
									</a>
									<p>
										Post videos from Youtube/Vimeo/Vevo, and follow friends to curate a feed in this Backbone app.
										<a class="github" href="https://github.com/ryanduchin/music-video-collector" target="_blank">Github</a>
									</p>
								</div>
								<div class="4u 12u$(mobile)">
									<a href="http://ryanduchin.github.io/Awesome-Ski-Free-Game/" class="image fit">
										<%= image_tag 'SkiGame2.png' %>
									<header><h3>Ski Game</h3>
									</a>
										<p>
											Avoid rocks and trees (and snowmen) in this physics javascript game rendered with HTML Canvas.
											<a class="github" href="https://github.com/ryanduchin/Awesome-Ski-Free-Game" target="_blank">Github</a>
										</p>
								</div>
								<div class="4u$ 12u$(mobile)">
									<a href="http://res.cloudinary.com/dwpmjcdhz/image/upload/v1440042466/Chess_gaudzs.png" class="image fit">
										<%= image_tag 'Chess.png' %>
									<header><h3>Chess</h3>
									</a>
									<p>Play Chess directly from your Terminal window</p>
								</div>
							</div>
						</section>
					</article>

					<!-- Contact -->
							<article id="contact" class="panel">
								<header>
									<h2>Contact Me</h2>
								<% if flash.now[:alert] %>
									<p id='alert'><%= flash.alert.html_safe %></p>
								<% end %>
								<% if flash.now[:notice] %>
									<p id='notice'><%= flash.notice.html_safe %></p>
								<% end %>
								</header>
								<%= form_tag 'send_mail#contact' do %>
									<div>
										<div class="row">
											<input type="text" name="name" placeholder="Name" style="display: none;" value="<%= @hidden_blank_field %>" >
											<div class="6u 12u$(mobile)">
												<input type="text" name="contact_name" placeholder="Name" value="<%= @name %>" >
											</div>
											<div class="6u$ 12u$(mobile)">
												<input type="text" name="email" placeholder="Email" value="<%= @email %>" >
											</div>
											<div class="12u$">
												<input type="text" name="subject" placeholder="Subject" value="<%= @subject %>" >
											</div>
											<div class="12u$">
												<textarea name="message" placeholder="Message" rows="8"><%= @message %></textarea>
											</div>
											<div class="12u$">
												<input type="submit" value="Send Message" />
											</div>
										</div>
									</div>
								<% end %>
							</article>

					</div>
	<% flash.clear %>
	</div>
